<% if @product.errors.present? %>
    <span style="color:red;">
        <h3>エラーがあります。</h3>
        <ul>
        <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
    </span>
<% end %>

<%= form_for @product, url: {action: :create} do |f| %>
  <%= f.label :name, '商品名称' %> 
  <%= f.text_field :name %> 
  <%= f.label :price, '商品価格' %> 
  <%= f.text_field :price %> 
  <%= f.submit '商品を登録する' %>
<% end %>